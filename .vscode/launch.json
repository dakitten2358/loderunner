    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "preLaunchTask": "rust: cargo build",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/loderunner.exe",
            "args": ["-window"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": []
        },
		{
            "name": "(Windows) Launch Fullscreen",
            "type": "cppvsdbg",
            "preLaunchTask": "rust: cargo build",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/loderunner.exe",
            "args": ["-fullscreen"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": []
        }
    ]

}